{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },

  "builders": [{
    "name": "vmware",
    "type": "vmware-iso",
    "vm_name": "warden-compatible",
    "guest_os_type": "ubuntu-64",
    "headless": "true",
    "http_directory": "http",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "tools_upload_flavor": "linux",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz auto",
      " console-setup/ask_detect=false",
      " console-setup/layoutcode=us",
      " console-setup/modelcode=pc105",
      " debconf/frontend=noninteractive",
      " debian-installer=en_US",
      " fb=false",
      " initrd=/install/initrd.gz",
      " kbd-chooser/method=us",
      " keyboard-configuration/layout=USA",
      " keyboard-configuration/variant=USA",
      " locale=en_US",
      " hostname={{ .Name }}",
      " netcfg/get_domain=vm",
      " netcfg/get_hostname=vagrant",
      " noapic",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
      " -- ",
      "<enter>"
    ],
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "output_directory": "vmware/output",
    "disk_size": 40960,
    "vmx_data": {
      "memsize": "512",
      "numvcpus": "1",
      "cpuid.coresPerSocket": "1"
    }
  },
  {
    "name": "virtualbox",
    "type": "virtualbox-iso",
    "vm_name": "warden-compatible",
    "guest_os_type": "Ubuntu_64",
    "headless": "true",
    "http_directory": "http",
    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
    "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "boot_command": [
      "<esc><esc><enter><wait>",
      "/install/vmlinuz auto",
      " console-setup/ask_detect=false",
      " debconf/frontend=noninteractive",
      " debian-installer=en_US",
      " fb=false",
      " initrd=/install/initrd.gz",
      " kbd-chooser/method=us",
      " keyboard-configuration/layout=USA",
      " keyboard-configuration/modelcode=SKIP",
      " keyboard-configuration/variant=USA",
      " locale=en_US",
      " hostname={{ .Name }}",
      " noapic",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
      " -- ",
      "<enter>"
    ],
    "ssh_wait_timeout": "10000s",
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "output_directory": "virtualbox/output",
    "disk_size": 40960,
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "1024"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  },
  {
    "name": "aws",
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-b08b6cd8",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "warden-compatible-{{uuid}}",
    "ami_description": "System provisioned with warden test infrastructure",
    "tags": {
      "Name": "warden-compatible-{{isotime}}"
    }
  }],

  "provisioners": [{
    "type": "shell",
    "only": ["vmware", "virtualbox"],
    "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
      "script/networking.sh"
    ]
  },
  {
    "type": "shell",
    "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "override": {
      "aws": {
        "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'"
      }
    },
    "scripts": [
      "script/sudoers.sh",
      "script/vagrant.sh",
      "script/base.sh",
      "script/sshd.sh",
      "script/apparmor.sh",
      "script/kernel-install.sh",
      "script/kernel-cleanup.sh",
      "script/cgroup-memory.sh",
      "script/kernel-lock.sh"
    ]
  },
  {
    "type": "shell",
    "only": ["aws"],
    "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "script": "script/replace-vagrant-key.sh"
  },
  {
    "type": "shell",
    "only": ["vmware", "virtualbox"],
    "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "script": "script/vmtools.sh"
  },
  {
    "type": "shell",
    "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "scripts": [
        "script/git.sh",
        "script/golang.sh",
        "script/ruby-install.sh",
        "script/cleanup.sh"
    ]
  },
  {
    "type": "shell",
    "only": ["vmware", "virtualbox"],
    "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
    "script": "script/zerodisk.sh"
  }],

  "post-processors": [{
    "type": "vagrant",
    "only": ["vmware", "virtualbox"],
    "keep_input_artifact": true,
    "output": "{{.Provider}}/warden-compatible.box"
  }]
}
